<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:id="@+id/main_container"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/member_name"
        android:textColor="@color/black"
        android:textSize="18dp"
        tools:text="Juan de la Cruz"/>

    <LinearLayout
        android:id="@+id/first_layer"
        android:layout_below="@id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/referenceno_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            tools:text="Reference No. :" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/member_pocno"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/referenceno_label"
            android:textSize="15dp"
            tools:text="123456789"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/second_layer"
        android:layout_below="@id/first_layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/member_effectivity_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            tools:text="Effectivity Date:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/member_effectivity"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/member_effectivity_label"
            android:textSize="15dp"
            tools:text="01/01/2023"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_layer"
        android:layout_below="@id/second_layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/member_premium_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            tools:text="Premium:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/member_premium"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/member_premium_label"
            android:textSize="15dp"
            android:layout_gravity="end"
            tools:text="2,000.00"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth_layer"
        android:layout_below="@id/third_layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/member_products_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            tools:text="Product:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/member_products"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/member_products_label"
            android:textSize="15dp"
            tools:text="CARD CARE, KABUKLOD, SAGIP"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/fifth_layer"
        android:layout_below="@id/fourth_layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/currentstatus_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            tools:text="Product:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currentstatus"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/member_products_label"
            android:textSize="15dp"
            tools:text="Pending"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/fifth_layer"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#DAD8D8"/>






</RelativeLayout>