<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tatai" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/pioneer_green</item>
        <item name="colorPrimaryVariant">@color/status_bar_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/status_bar_green</item>
    </style>
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/pioneer_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Tatai.NoActionBar" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/pioneer_green</item>
        <item name="colorPrimaryVariant">@color/pioneer_green</item>
        <item name="colorOnPrimary">@color/white</item>
       <item name="colorSurface">@color/pioneer_green</item>
        <item name="colorOnSurface">@color/white</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>



</resources>